<ViewObject
  xmlns="http://xmlns.oracle.com/bc4j"
  Name="LkbItemsROView"
  Version="12.2.1.12.24"
  InheritPersonalization="merge"
  BindingStyle="OracleName"
  CustomQuery="true"
  RowClass="com.hmsa.checkpoint.basic.classes.CheckpointViewRowImpl"
  ComponentClass="com.hmsa.checkpoint.basic.classes.CheckpointViewObjectImpl"
  DefClass="com.hmsa.checkpoint.basic.classes.CheckpointViewDefImpl"
  PageIterMode="Full">
  <DesignTime>
    <Attr Name="_isExpertMode" Value="true"/>
  </DesignTime>
  <Properties>
    <SchemaBasedProperties>
      <LABEL
        ResId="com.hmsa.pharma.model.cfg.vo.ro.LkbItemsROView_LABEL"/>
    </SchemaBasedProperties>
  </Properties>
  <Variable
    Name="bindRepId"
    Kind="where"
    Type="oracle.jbo.domain.Number"/>
  <SQLQuery><![CDATA[SELECT ITEMS.ITEM_ID,    
       ITEMS.ITEM_CODE,    
       ITEMS.ITEM_NAME,    
       ITEMS.MANUFACTURE_ID,   
       MNF.MNF_NAME   
FROM  REPS_ITEMS_V ITEMS,LKB_MANUFACTURERS MNF   
WHERE ITEMS.MANUFACTURE_ID = MNF.MNF_ID  
AND ITEMS.REP_ID = :bindRepId 
ORDER BY ITEMS.ITEM_NAME]]></SQLQuery>
  <ViewAttribute
    Name="ItemId"
    IsUpdateable="false"
    IsPersistent="false"
    PrecisionRule="true"
    Type="oracle.jbo.domain.Number"
    ColumnType="NUMBER"
    AliasName="ITEM_ID"
    Expression="ITEM_ID"
    SQLType="NUMERIC"/>
  <ViewAttribute
    Name="ItemCode"
    IsUpdateable="false"
    IsPersistent="false"
    PrecisionRule="true"
    Precision="100"
    Type="java.lang.String"
    ColumnType="VARCHAR2"
    AliasName="ITEM_CODE"
    Expression="ITEM_CODE"
    SQLType="VARCHAR">
    <DesignTime>
      <Attr Name="_DisplaySize" Value="100"/>
    </DesignTime>
  </ViewAttribute>
  <ViewAttribute
    Name="ItemName"
    IsUpdateable="false"
    IsPersistent="false"
    PrecisionRule="true"
    Precision="200"
    Type="java.lang.String"
    ColumnType="VARCHAR2"
    AliasName="ITEM_NAME"
    Expression="ITEM_NAME"
    SQLType="VARCHAR">
    <DesignTime>
      <Attr Name="_DisplaySize" Value="200"/>
    </DesignTime>
  </ViewAttribute>
  <ViewAttribute
    Name="ManufactureId"
    IsUpdateable="false"
    IsPersistent="false"
    PrecisionRule="true"
    Type="oracle.jbo.domain.Number"
    ColumnType="NUMBER"
    AliasName="MANUFACTURE_ID"
    Expression="MANUFACTURE_ID"
    SQLType="NUMERIC"/>
  <ViewAttribute
    Name="MnfName"
    IsUpdateable="false"
    IsPersistent="false"
    PrecisionRule="true"
    Precision="200"
    Type="java.lang.String"
    ColumnType="VARCHAR2"
    AliasName="MNF_NAME"
    Expression="MNF_NAME"
    SQLType="VARCHAR">
    <DesignTime>
      <Attr Name="_DisplaySize" Value="200"/>
    </DesignTime>
  </ViewAttribute>
  <AttrArray Name="KeyAttributes">
    <Item Value="ItemId"/>
  </AttrArray>
  <ResourceBundle>
    <PropertiesBundle
      PropertiesFile="com.hmsa.pharma.model.bundles.PharmaModelBundle"/>
  </ResourceBundle>
</ViewObject>
